<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xmlns:web="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>gweb</display-name>
	<distributable />
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>Parameter-Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Parameter-Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>org.metagene.gweb.service.genestrip.GenestripRestApplication</servlet-name>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>org.metagene.gweb.service.genestrip.GenestripRestApplication</param-value>
		</init-param>
		<init-param>
			<param-name>dataSource</param-name>
			<param-value>jdbc/gwebdb</param-value>
		</init-param>
		<init-param>
			<param-name>testMode</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>defaultUser</param-name>
			<param-value>admin</param-value>
		</init-param>
		<init-param>
			<param-name>sqlDialect</param-name>
			<param-value>HSQL</param-value>
		</init-param>
		<init-param>
			<param-name>genestripBaseDir</param-name>
			<param-value>../data</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Viewer</servlet-name>
		<jsp-file>/viewer/viewer.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>DBInfo</servlet-name>
		<jsp-file>/dbinfo/dbinfo.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>Log</servlet-name>
		<jsp-file>/log/log.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>FastqUpload</servlet-name>
		<servlet-class>org.metagene.gweb.service.genestrip.upload.StreamingFastqUploadProcessor</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>org.metagene.gweb.service.genestrip.GenestripRestApplication</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Viewer</servlet-name>
		<url-pattern>/view</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DBInfo</servlet-name>
		<url-pattern>/dbinfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Log</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FastqUpload</servlet-name>
		<url-pattern>/fastqupload</url-pattern>
	</servlet-mapping>
	<mime-mapping>
		<extension>html</extension>
		<mime-type>text/html;charset=UTF-8</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>js</extension>
		<mime-type>text/javascript;charset=UTF-8</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>css</extension>
		<mime-type>text/css;charset=UTF-8</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>txt</extension>
		<mime-type>text/plain;charset=UTF-8</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>json</extension>
		<mime-type>application/json;charset=UTF-8</mime-type>
	</mime-mapping>
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	<context-param>
		<param-name>filePathRole</param-name>
		<param-value>ADMIN</param-value>
	</context-param>
	<context-param>
		<param-name>uploadPathRole</param-name>
		<param-value>ADMIN</param-value>
	</context-param>
	<context-param>
		<param-name>localInstall</param-name>
		<param-value>true</param-value>
	</context-param>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/gwebdb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
</web-app>